{
  "projects": {
    "default": "matchpoint-front"
  },
  "hosting": {
    "public": "dist/playmatch/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/users",
        "destination": "/api/users.json"
      },
      {
        "source": "/api/users/*",
        "destination": "/api/users-:splat.json"
      },
      {
        "source": "/api/courts",
        "destination": "/api/courts.json"
      },
      {
        "source": "/api/courts/*",
        "destination": "/api/courts-:splat.json"
      },
      {
        "source": "/api/coaches",
        "destination": "/api/coaches.json"
      },
      {
        "source": "/api/coaches/*",
        "destination": "/api/coaches-:splat.json"
      },
      {
        "source": "/api/bookings",
        "destination": "/api/bookings.json"
      },
      {
        "source": "/api/bookings/*",
        "destination": "/api/bookings-:splat.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
